{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build wasm (release)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"rustup target add wasm32-unknown-unknown; cargo build --release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		}
	]
}