/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  background-color: white;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.status {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  display: inline-block;
}

.status.loading {
  background-color: #ffc107;
  color: #856404;
}

.status.loaded {
  background-color: #28a745;
  color: white;
}

.input-group {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.input-group text {
  font-size: 28rpx;
  margin-right: 20rpx;
  width: 120rpx;
  color: #666;
}

.input-group input {
  flex: 1;
  border: 2rpx solid #ddd;
  padding: 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.input-group button {
  margin-left: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.button-group button {
  flex: 1;
  font-size: 28rpx;
}

.result {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #e8f5e8;
  border-radius: 5rpx;
  border-left: 4rpx solid #28a745;
}

.result-text {
  font-size: 28rpx;
  color: #155724;
  word-wrap: break-word;
}