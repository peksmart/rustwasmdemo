/* zigwasm.wxss - 紧凑版本 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 15rpx;
}

.header {
  text-align: center;
  margin-bottom: 15rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b95 100%);
  border-radius: 15rpx;
  color: white;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.wasm-status {
  text-align: center;
  margin-bottom: 15rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.wasm-status.loading {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
  color: #fa8c16;
}

.wasm-status.ready {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  color: #52c41a;
}

.wasm-status.error {
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
  color: #ff4d4f;
}

.section {
  background: white;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 数学运算紧凑布局 */
.math-row {
  margin-bottom: 8rpx;
}

.math-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.label {
  min-width: 120rpx;
  color: #666;
  font-size: 24rpx;
}

.input {
  width: 100rpx;
  height: 50rpx;
  padding: 0 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  margin: 0 8rpx;
  font-size: 24rpx;
  text-align: center;
}

.input-text {
  flex: 1;
  height: 50rpx;
  padding: 0 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  margin: 0 8rpx;
  font-size: 24rpx;
}

.operator {
  color: #ff6b95;
  font-weight: bold;
  font-size: 28rpx;
}

.btn-small {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 15rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b95 100%);
  color: white;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin: 0 8rpx;
}

.btn-small:disabled {
  background: #ccc;
}

.result-text {
  color: #52c41a;
  font-weight: bold;
  font-size: 26rpx;
  margin-left: 10rpx;
}

/* 字符串处理布局 */
.string-row {
  margin-bottom: 10rpx;
}

.string-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.string-result {
  background: #f0f8ff;
  border: 1rpx solid #e6f3ff;
  border-radius: 6rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #333;
  min-height: 40rpx;
  word-break: break-all;
}