<!--zigwasm.wxml-->
<navigation-bar title="Zig WASM Demo" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="header">
      <text class="title">🔮 Zig WebAssembly</text>
      <text class="subtitle">高性能系统级编程语言</text>
    </view>

    <!-- WASM 状态 -->
    <view class="wasm-status {{wasmStatus.class}}">
      <text>{{wasmStatus.text}}</text>
    </view>

    <!-- 数学运算区域 -->
    <view class="section">
      <view class="section-title">🧮 数学运算</view>
      
      <!-- 加法 -->
      <view class="math-row">
        <view class="math-item">
          <text class="label">加法:</text>
          <input class="input" type="number" value="{{addA}}" bindinput="onAddAInput"/>
          <text class="operator">+</text>
          <input class="input" type="number" value="{{addB}}" bindinput="onAddBInput"/>
          <button class="btn-small" bindtap="calculateAdd" disabled="{{!wasmReady}}">=</button>
          <text class="result-text">{{addResult}}</text>
        </view>
      </view>
      
      <!-- 乘法 -->
      <view class="math-row">
        <view class="math-item">
          <text class="label">乘法:</text>
          <input class="input" type="number" value="{{mulA}}" bindinput="onMulAInput"/>
          <text class="operator">×</text>
          <input class="input" type="number" value="{{mulB}}" bindinput="onMulBInput"/>
          <button class="btn-small" bindtap="calculateMul" disabled="{{!wasmReady}}">=</button>
          <text class="result-text">{{mulResult}}</text>
        </view>
      </view>
      
      <!-- 斐波那契 -->
      <view class="math-row">
        <view class="math-item">
          <text class="label">斐波那契:</text>
          <input class="input" type="number" value="{{fibN}}" bindinput="onFibNInput"/>
          <button class="btn-small" bindtap="calculateFib" disabled="{{!wasmReady}}">计算</button>
          <text class="result-text">{{fibResult}}</text>
        </view>
      </view>
    </view>

    <!-- 字符串处理区域 -->
    <view class="section">
      <view class="section-title">📝 字符串处理</view>
      
      <view class="string-row">
        <view class="string-item">
          <text class="label">问候语:</text>
          <input class="input-text" placeholder="输入姓名" value="{{greetName}}" bindinput="onGreetNameInput"/>
          <button class="btn-small" bindtap="processGreet" disabled="{{!wasmReady}}">生成</button>
        </view>
        <view class="string-result">{{greetResult}}</view>
      </view>
      
      <view class="string-row">
        <view class="string-item">
          <text class="label">反转:</text>
          <input class="input-text" placeholder="输入文字" value="{{reverseText}}" bindinput="onReverseTextInput"/>
          <button class="btn-small" bindtap="processReverse" disabled="{{!wasmReady}}">反转</button>
        </view>
        <view class="string-result">{{reverseResult}}</view>
      </view>
    </view>
  </view>
</scroll-view>