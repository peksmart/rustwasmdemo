/* pages/wasm/wasm.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.section {
  background: white;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 150rpx;
  font-size: 30rpx;
  color: #666;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #fafafa;
}

.input:focus {
  border-color: #667eea;
  background-color: white;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 25rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  width: 100%;
  margin-top: 25rpx;
}

.btn-accent {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  width: 100%;
  margin-top: 25rpx;
}

.btn:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

.result {
  margin-top: 25rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 10rpx;
  border-left: 5rpx solid #667eea;
}

.result text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.status {
  position: fixed;
  bottom: 30rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.status-text {
  font-size: 26rpx;
}