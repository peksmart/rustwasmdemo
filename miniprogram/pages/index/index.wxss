/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  display: inherit !important;
}

.header {
  text-align: center;
  margin-bottom: 0rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  display: block;
  font-size: 30rpx;
  opacity: 0.9;
}

.menu {
  margin-top: 10rpx;
}

.menu-item {
  background: white;
  padding: 40rpx;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: none;
  text-align: left;
  position: relative;
  overflow: hidden;
}

.menu-item:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

.menu-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.menu-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}
